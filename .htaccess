# Complete Cache Prevention for Apache
# This file prevents all forms of caching

# Disable caching for all files
<IfModule mod_expires.c>
    ExpiresActive Off
</IfModule>

<IfModule mod_headers.c>
    # Prevent caching for all content types
    <FilesMatch "\.(html|htm|css|js|json|xml|txt|ico|svg|png|jpg|jpeg|gif|webp|woff|woff2|ttf|eot)$">
        Header set Cache-Control "no-cache, no-store, no-transform, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "-1"
        Header set Last-Modified "0"
        Header unset ETag
    </FilesMatch>

    # Additional headers for complete cache prevention
    Header always set Cache-Control "no-cache, no-store, no-transform, must-revalidate, max-age=0"
    Header always set Pragma "no-cache"
    Header always set Expires "-1"
    Header always unset ETag
    Header always unset Last-Modified
</IfModule>

# Disable ETags
FileETag None

# Force fresh content
<IfModule mod_mime.c>
    AddType text/html .html
    AddType text/css .css
    AddType application/javascript .js
</IfModule>

# Prevent compression caching
<IfModule mod_deflate.c>
    SetEnv no-gzip 1
</IfModule>
